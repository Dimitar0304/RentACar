@model RentACar.Core.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient text-white text-center py-4" style="background-color: #1a237e;">
                    <h2 class="font-weight-light mb-0">Welcome Back</h2>
                    <p class="mb-0 mt-2 text-white-50">Please login to your account</p>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Accounts" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="username" />
                            <label asp-for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Password" autocomplete="current-password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <div class="small">
                        <a asp-controller="Accounts" asp-action="Register" class="text-decoration-none">Need an account? Sign up!</a>
                    </div>
                    <div class="small mt-2">
                        <a asp-controller="Accounts" asp-action="ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 